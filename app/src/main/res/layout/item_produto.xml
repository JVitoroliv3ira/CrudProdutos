<!-- item_produto.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_secondary"
    android:layout_marginBottom="8dp">

    <!-- Linha para Código do Produto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/codigo_label_card"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/list_codigo_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Linha para Nome do Produto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nome_label_card"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/list_nome_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/primary"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Linha para Descrição do Produto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descricao_label_card"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/list_descricao_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Linha para Quantidade em Estoque -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/estoque_label_card"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/list_estoque_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>
